{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "jest": true,
    "jasmine": true
  },
  "globals": {
    "Enzyme": true,
    "React": true,
    "ReactDOM": true
  },
  "settings": {
    "import/resolver": {
      "webpack": { "config": "webpack.config.js" }
    }
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      { "packageDir": ["css/"] }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "jsx-quotes": ["error", "prefer-single"]
  }
}
